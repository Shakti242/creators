<%= content_for :page_title do %>
  Store
<% end %>

<div class="bg-white shadow overflow-hidden sm:rounded-lg mt-4">
  <div class="px-4 py-5 sm:px-6">
    <h3 class="text-lg leading-6 font-medium text-gray-900">Store information</h3>
    <p class="mt-1 max-w-2xl text-sm text-gray-500">
      <%= link_to "edit", edit_store_path, class: "underline" %>
    </p>
  </div>
  <div class="border-t border-gray-200 px-4 py-5 sm:p-0">
    <dl class="sm:divide-y sm:divide-gray-200">
      <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
        <dt class="text-sm font-medium text-gray-500">View</dt>
        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
          <% if @store %>
            <%= link_to store_root_url(subdomain: @store.subdomain), store_root_url(subdomain: @store.subdomain), class: 'underline' %>
          <% else %>
            <span class="text-gray-500">No store data available</span>
          <% end %>
        </dd>
      </div>

      <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
        <dt class="text-sm font-medium text-gray-500">Subdomain</dt>
        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
          <% if @store %>
            <%= @store.subdomain %>
          <% else %>
            <span class="text-gray-500">No subdomain available</span>
          <% end %>
        </dd>
      </div>

      <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
        <dt class="text-sm font-medium text-gray-500">Primary color</dt>
        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
          <% if @store && @store.primary_color %>
            <span style="background-color: <%= @store.primary_color %>; width: 20px; height: 20px; border-radius: 50%; display: inline-block;"></span>
            <%= @store.primary_color %>
          <% else %>
            <span class="text-gray-500">No primary color available</span>
          <% end %>
        </dd>
      </div>

      <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
        <dt class="text-sm font-medium text-gray-500">Secondary color</dt>
        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
          <% if @store && @store.secondary_color %>
            <span style="background-color: <%= @store.secondary_color %>; width: 20px; height: 20px; border-radius: 50%; display: inline-block;"></span>
            <%= @store.secondary_color %>
          <% else %>
            <span class="text-gray-500">No secondary color available</span>
          <% end %>
        </dd>
      </div>
    </dl>
  </div>
</div>
